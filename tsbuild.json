{
  "src": "./lib/",
  "main": "index.ts",
  "tslint": "./tslint.json",
  "distFolder": "./dist/",
  "output": {
    "format": "cjs",
    "file": "index.js",
    "name": "ClusterWS"
  },
  "uglify": {
    "mangle": true,
    "output": {
      "beautify": true
    }
  },
  "external": [
    "https",
    "http",
    "tls"
  ],
  "tsConfigs": {
    "compilerOptions": {
      "target": "es6",
      "module": "ES2015",
      "removeComments": true,
      "moduleResolution": "node",
      "declaration": true
    },
    "files": [
      "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
      "./lib/**/*"
    ]
  }
}